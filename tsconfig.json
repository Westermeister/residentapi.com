{
  "compilerOptions": {
    "outDir": "./dist/backend",
    "strict": true,
    "module": "CommonJS",
    "target": "ES2017",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/backend/**/*.ts"]
}
